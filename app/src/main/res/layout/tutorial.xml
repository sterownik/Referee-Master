<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp" android:layout_height="300dp">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"
        android:text="z 8" />

    <TextView
        android:id="@+id/numertipa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/textView"
        android:layout_marginRight="2dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:text="1" />

    <TextView
        android:id="@+id/glowny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/blekit"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="25dp"
        android:text="Samouczek" />
    <ImageView
        android:id="@+id/ikonatipa"
        android:layout_width="100dp"
        android:src="@drawable/salutee"
        android:layout_centerVertical="true"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/tresc"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:textColor="@color/blekit"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginRight="10dp"
        android:textSize="14dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/ikonatipa"
        android:text="TextView" />

    <Button
        android:id="@+id/dalej"
        android:layout_width="80dp"
        android:layout_margin="20dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@color/blekit"
        android:text="Dalej"
        android:textColor="@color/bialy" />
</RelativeLayout>