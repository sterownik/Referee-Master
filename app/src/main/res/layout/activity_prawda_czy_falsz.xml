<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bialy"
    android:orientation="vertical"
    tools:context=".PrawdaCzyFalsz">

    <TextView
        android:id="@+id/odliczanie2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:textSize="40dp"

        android:textColor="@color/czarny"


        />


    <LinearLayout
        android:id="@+id/graprawda"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:orientation="vertical">

        <TextView
            android:id="@+id/punkty"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_weight="0.1"
            android:background="@drawable/bottomblue"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/blekit"
            android:textSize="20dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.30">

            <ProgressBar
                android:id="@+id/czas"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:background="@drawable/circle_shape"
                android:indeterminate="false"
                android:max="20"
                android:progress="1"
                android:progressDrawable="@drawable/circular_progress_bar" />

            <TextView
                android:id="@+id/czastekst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Czas"
                android:textColor="@color/blekit"
                android:textSize="25sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:id="@+id/pytanie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.4"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/blekit"
            android:background="@drawable/textview_border2"
            android:gravity="center"
            android:padding="10dp"
            android:text="TextView" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="100dp"
            android:layout_weight="0.3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/przycisktak"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@drawable/kolka"
                    android:text="TAK"
                    android:textColor="@color/bialy"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/przycisknie"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@drawable/kolka"
                    android:text="NIE"
                    android:textColor="@color/bialy"
                    android:textSize="30sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>